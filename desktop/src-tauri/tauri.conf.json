{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/tooling/cli/schema.json",
  "build": {
    "devPath": "http://localhost:3000",
    "distDir": "../ui"
  },
  "package": {
    "productName": "Reference",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false
    },
    "bundle": {
      "active": true,
      "targets": ["app"],
      "identifier": "com.moondream.desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "resources/next/server.js",
        "resources/next/package.json",
        "resources/next/public",
        "resources/next/node_modules",
        "resources/next/.next",
        "resources/bin/node",
        "resources/bin/moondream-worker",
        "resources/bin/README.md"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fileDropEnabled": false,
        "theme": "Dark"
        }
    ]
  }
}


